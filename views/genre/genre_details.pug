extends ../layout

block content
  h1 Genre: #{genre.name}

  h3 CDS of this genre: 
    ul 
    for cd in genreCds 
      li 
        a(href="../cd/"+cd.id ) #{cd.title}

  h3  artist of this genre: 
   ul 
    for author in genreAuthors 
      li 
        a(href="../author/"+author.id ) #{author.name}
  
  form(action="delete" method='post')
     input(type='submit' value='OK')
